{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": ["standard"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "semi": [2, "always"],
        "indent": ["error", 4],
        "comma-dangle": [0],
        "space-before-function-paren": [0]
    }
}
